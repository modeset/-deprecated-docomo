!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
    %title= title
    %meta(name="description" content="Docomo Documentation / https://github.com/modeset/docomo")
    %meta(name="keywords" content="Mode Set Docomo Documentation")
    %meta(name="author" content="Mode Set")
    %meta(name="imagetoolbar" content="no")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %meta(name="apple-touch-fullscreen" content="yes")
    %meta(name="apple-mobile-web-app-capable" content="yes")
    %meta(name="apple-mobile-web-app-status-bar-style" content="black")
    %link(href="/assets/docomo.css" rel="stylesheet" type="text/css")

  %body(role="document")
    %aside#docomo_sidebar
      %h1
        %a(href="/")= title
      %ul
        - for item in aside_items
          %li
            %a(href="##{item[:id]}")= item[:title]

    %section#docomo_sections
      - for section in content_sections
        %a(name="#{section[:id]}")
        %section.docomo-section= section[:content]

    %script(src="/assets/docomo.js" type="text/javascript")

